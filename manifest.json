{
  "manifest_version": 2,
  "name": "Withboard Display",
  "short_name": "Withboard",
  "description": "Launches a new Scopely Withboard display as a window or kiosk view",
  "version": "0.3.0",
  "minimum_chrome_version": "38",

  "kiosk_enabled" : true,

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [
    "power",
    "system.cpu",
    "system.display",
    "system.memory",
    "webview",
    "audioCapture",
    "videoCapture",
    "tts"
  ],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
